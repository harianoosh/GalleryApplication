<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".UserProfileFragment" >

    <ImageView
        android:id="@+id/userDP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/female_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAllUsers" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userProfileRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userDP" />

    <Button
        android:id="@+id/buttonUploadImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_label"
        app:layout_constraintBottom_toBottomOf="@+id/buttonAllUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAllUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_users_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>